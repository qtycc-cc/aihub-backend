<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.aihub.mapper.ChatMapper">
    <select id="findAllChats">
        SELECT
            `id`, `user_id`, `content`
        FROM
            `chat`
    </select>

    <select id="findChatById">
        SELECT
            `id`, `user_id`, `content`
        FROM
            `chat`
        WHERE
            `id` = #{id}
    </select>

    <select id="findChatByUserId">
        SELECT
            `id`, `user_id`, `content`
        FROM
            `chat`
        WHERE
            `user_id` = #{userId}
    </select>
</mapper>